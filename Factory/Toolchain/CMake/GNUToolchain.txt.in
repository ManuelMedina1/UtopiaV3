list(APPEND CMAKE_MODULE_PATH "@UTOPIA_SOURCE_DIR@/Factory/Toolchain/CMake")

set(CMAKE_SYSTEM_NAME UtopiaOS)
set(CMAKE_SYSTEM_PROCESSOR "@UTOPIA_ARCH@")

set(UTOPIAOS 1)
set(LINUX 1)
set(triple @UTOPIA_ARCH@-@UTOPIA_VENDOR@-linux-utopia)
set(TOOLCHAIN_PATH @UTOPIA_SOURCE_DIR@/Build/Tools/bin)
set(TOOLCHAIN_PREFIX ${TOOLCHAIN_PATH}/${triple}-)

set(CMAKE_SYSROOT @UTOPIA_BUILD_DIR@/Root)

set(CMAKE_C_COMPILER ${TOOLCHAIN_PREFIX}gcc)
set(CMAKE_CXX_COMPILER ${TOOLCHAIN_PREFIX}g++)
set(CMAKE_ASM_COMPILER ${TOOLCHAIN_PREFIX}gcc)
set(CMAKE_LINKER ${TOOLCHAIN_PREFIX}ld)
set(CMAKE_RANLIB ${TOOLCHAIN_PREFIX}gcc-ranlib)
set(CMAKE_STRIP ${TOOLCHAIN_PREFIX}strip)
set(CMAKE_AR ${TOOLCHAIN_PREFIX}gcc-ar)
set(CMAKE_OBJCOPY ${TOOLCHAIN_PREFIX}objcopy)
set(SERENITY_CXXFILT ${TOOLCHAIN_PREFIX}c++filt)
